{
  "compilerOptions": {
    "rootDir": ".",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
		"lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "strictNullChecks": true,
    "noUnusedLocals": true
		// "noFallthroughCasesInSwitch": true,
		// "noUnusedParameters": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "web/built",
    "electron/built",
    "vscode/built",
    "saliva-repl/built",
    "saliva/dist",
    "pantheon/dist"
  ]
}
