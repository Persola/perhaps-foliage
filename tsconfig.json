{
  "compilerOptions": {
    "rootDir": "src",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "strictNullChecks": true,
    "noUnusedLocals": true,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/extension-staging-area/saliva/dist",
    "src/extension-staging-area/pantheon/dist",
  ],
}
