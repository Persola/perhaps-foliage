{
  "compilerOptions": {
    "rootDir": ".",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
		"lib": [
      "ES2020",
      "DOM",
    ],
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true
  },
  "include": [
    "src"
  ],
}
